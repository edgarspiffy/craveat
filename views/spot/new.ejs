<%- include("../partials/header")  %>

<div class="container">
  <h1>Your Food Spot Info</h1>


  <form action='/spot' method='POST'>

    <!-- Name -->
    <div class="form-group">
      <label for="name">Location Name</label>
      <input type="text" class="form-control" name='spot[name]' id="name" placeholder="">
    </div>

    <!-- ADDRESS -->
    <div class="form-group">
      <label for="city">City</label>
      <input type="text" class="form-control" name='spot[location][city]' id="city" placeholder="">
    </div>

    <div class="form-group">
      <label for="zip">Zip</label>
      <input type="number" maxlength="5" class="form-control" name='spot[location][zip]' id="zip" placeholder="">
    </div>

    <div class="form-group">
      <label for="address">Address</label>
      <input type="text" class="form-control" name='spot[location][address]' id="address" placeholder="">
    </div>


    <!-- Hours -->
      <% const days = ["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"] %> 
        <% days.forEach((day,index) => { %>

          <div class="form-inline py-1">
            <div style='width:100px;'><%= day %> </div>
            <input class="form-control mr-3 bg-none" type="hidden" value="<%= index %> " name="spot[hours][<%= index %>][day]" readonly>
            <select class="form-control mr-3" name="spot[hours][<%= index %>][start]">
              <option>Opens At</option>
              <option>Open 24 Hours</option>
              <%- include("../partials/selectHours")  %>
            </select>
            <select class="form-control mr-3" name="spot[hours][<%= index %>][end]">
              <option>Closes At</option>
              <%- include("../partials/selectHours")  %>
            </select>
            
            <div class="custom-control custom-checkbox my-1 mr-sm-2">
              <input type="checkbox" class="custom-control-input" id="customControlInline<%= index %>">
              <label class="custom-control-label" for="customControlInline<%= index %>">Closed</label>
            </div>
            
          </div>
        <% }) %> 
      

    

    <!-- Submit Button -->
    <div>
      <button class='btn btn-primary'>Submit</button>
    </div>
  
  </form>
</div>



