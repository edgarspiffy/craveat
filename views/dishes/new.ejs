<%- include("../partials/header")  %>


<div class="container">
  <h1>Enter Dish Info</h1>
  <form action='/spot/<%= id %>/dishes' method='POST'>
    <!-- ID -->
    <input type="hidden" name='dish[spotInfo]' value='<%= id %>'>

    <div class="form-group">
      <label for="restaurantName">Name</label>
      <input type="text" class="form-control" name='dish[name]' id="restaurantName" placeholder="">
    </div>


    <div class="form-group">
      <label for="restaurantCity">Ingredients</label>
      <input type="text" class="form-control" name='dish[ingredients]' id="restaurantCity" placeholder="">
    </div>


    <div class="form-group">
      <label for="restaurantCity">Caloric Count</label>
      <input type="number" class="form-control" name='dish[calories]' id="restaurantCity" placeholder="">
    </div>

   
    <h3>Dish Options</h3>
    <div class="form-check">
      <input type="hidden" name="box1" value="0" />
      <input class="form-check-input" type="checkbox" value="true" name="dish[vegan]" id="vegan">
      <label class="form-check-label" for="vegan">
        Vegan
      </label>
    </div>

    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="true" name="dish[spicy]" id="spicy">
      <label class="form-check-label" for="spicy">
        Spicy
      </label>
    </div>


    <div>
      <button class='btn btn-primary'>Submit</button>
    </div>
  </form>
</div>

<script>
  const vegan = document.getElementById('vegan');

  vegan.addEventListener('change',runEvent);

  function runEvent(){
 
    if(vegan.checked == true){
      vegan.value=true;
    }else{
      vegan.value=false;
    }
  }
</script>


