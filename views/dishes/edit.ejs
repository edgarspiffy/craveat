<%- include("../partials/header")  %>


<div class="container">
  <h1>Edit Dish</h1>
  <form action='/spot/<%= id %>/dishes/<%= dish._id %>?_method=PUT' method='POST'>
    <div class="form-group">
      <label for="restaurantName">NAME</label>
      <input type="text" class="form-control" name='dish[name]' id="restaurantName" value="<%= dish.name %> ">
    </div>

    <div class="form-group">
      <label for="restaurantCity">INGREDIENTS</label>
      <input type="text" class="form-control" name='dish[ingredients]' id="restaurantCity" value="<%= dish.ingredients %> ">
    </div>


    <div class="form-group">
      <label for="restaurantCity">Caloric Count</label>
      <input type="number" class="form-control" name='dish[calories]' id="restaurantCity" placeholder="" <%= dish.calories %>>
    </div>
    
    
    <h3>Dish Options</h3>
    <div class="form-check">

      <% if(dish.vegan == true){ %>
        <input class="form-check-input" type="checkbox" value=true name="dish[vegan]" id="vegan" checked>
      <% }else{ %> 
        <input class="form-check-input" type="checkbox" value=false name="dish[vegan]" id="vegan" checked>
      <% } %>
      
    <input class="form-check-input" type="checkbox" value=false name="dish[vegan]" id="vegan">
      <label class="form-check-label" for="vegan">
        Vegan
      </label>
    </div>
    
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="true" name="dish[spicy]" id="spicy">
      <label class="form-check-label" for="spicy">
        Spicy
      </label>
    </div>
    
    
  

    <div>
      <button class='btn btn-primary'>Submit</button>
    </div>
  </form>
</div>



<%- include("../partials/footer")  %>